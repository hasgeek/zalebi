<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="9"
        android:padding="10dp">
        <TextView
            android:id="@+id/fragment_space_contactexchange_contact_list_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_gravity="start"
            android:padding="5dp"
            android:paddingBottom="0dp"/>

        <TextView
            android:id="@+id/fragment_space_contactexchange_contact_list_row_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_gravity="start"
            android:padding="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_space_contactexchange_contact_list_row_btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_weight="1"/>
</LinearLayout>